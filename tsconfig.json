{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "*": ["@types/*"],
      "lib/*": ["src/lib/*"],
      "screens/*": ["src/screens/*"],
      "stores/*": ["src/stores/*"],
      "components/*": ["src/components/*"],
      "config/*": ["src/config/*"]
    }
  }
}
